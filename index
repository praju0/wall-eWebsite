  <script>
    const menu = [
      { id: 1, name: "Spicy Ramen", price: 120, desc: "A flavorful bowl with a kick.", img: "https://via.placeholder.com/250x150?text=Spicy+Ramen" },
      { id: 2, name: "Veggie Pizza", price: 180, desc: "Fresh veggies on a crispy crust.", img: "https://via.placeholder.com/250x150?text=Veggie+Pizza" },
      { id: 3, name: "Classic Burger", price: 90, desc: "Juicy beef patty with fresh toppings.", img: "https://via.placeholder.com/250x150?text=Classic+Burger" },
      { id: 4, name: "Caesar Salad", price: 110, desc: "Fresh romaine with creamy dressing.", img: "https://via.placeholder.com/250x150?text=Caesar+Salad" },
      { id: 5, name: "Mango Smoothie", price: 60, desc: "Sweet tropical mango blend.", img: "https://via.placeholder.com/250x150?text=Mango+Smoothie" },
      { id: 6, name: "Chocolate Cake", price: 80, desc: "Rich and moist chocolate dessert.", img: "https://via.placeholder.com/250x150?text=Chocolate+Cake" }
    ];

    let cart = {};

    function renderMenu() {
      const container = document.querySelector(".menu-grid");
      container.innerHTML = "";
      menu.forEach(item => {
        const card = document.createElement("div");
        card.className = "menu-card";
        card.innerHTML = `
          <img src="${item.img}" alt="${item.name}" />
          <h3>${item.name}</h3>
          <p>₹${item.price} - ${item.desc}</p>
          <button onclick="addToCart(${item.id})">Add to order</button>
        `;
        container.appendChild(card);
      });
    }

    function addToCart(id) {
      if(cart[id]) {
        cart[id].quantity += 1;
      } else {
        const item = menu.find(m => m.id === id);
        cart[id] = { ...item, quantity: 1 };
      }
      alert(`${cart[id].name} added to your order.`);
      renderCart();
    }

    function renderCart() {
      const orderList = document.getElementById("order-list");
      orderList.innerHTML = "";
      let total = 0;
      for(let key in cart) {
        let item = cart[key];
        let subTotal = item.price * item.quantity;
        total += subTotal;
        let li = document.createElement("li");
        li.textContent = `${item.name} x${item.quantity} = ₹${subTotal}`;
        orderList.appendChild(li);
      }
      const totalEl = document.getElementById("total-price");
      totalEl.textContent = `Total: ₹${total}`;
    }

    function submitOrder(e) {
      e.preventDefault();
      const name = e.target.name.value.trim();
      const email = e.target.email.value.trim();
      const table = e.target.table.value.trim();
      if(Object.keys(cart).length === 0) {
        alert("Please add at least one item to your order.");
        return;
      }
      if(!name || !email || !table) {
        alert("Please fill in all the required fields.");
        return;
      }
      // Prepare order data
      const orderItems = Object.values(cart).map(item => ({ name: item.name, quantity: item.quantity }));
      const orderData = { name, email, table, order: orderItems };

      // Replace the URL with your backend or Google Script URL for order processing
      const backendURL = "YOUR_GOOGLE_SCRIPT_OR_BACKEND_URL";

      fetch(backendURL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(orderData),
      })
      .then(res => res.json())
      .then(data => {
        alert(`✅ Order placed successfully! Row: ${data.row || "N/A"}`);
        cart = {};
        renderCart();
        e.target.reset();
      })
      .catch(err => {
        alert("Failed to place order. Please try again.");
        console.error(err);
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      renderMenu();
      document.getElementById("order-form").addEventListener("submit", submitOrder);
      renderCart();
    });
  </script>
